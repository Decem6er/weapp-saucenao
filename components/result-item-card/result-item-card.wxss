
.result-item {
  padding: 20rpx;
  color: #fff;
  font-size: 14px;
  border: 10rpx solid #fff;
  display: flex;
  position: relative;
}

.thumbnail {
  margin-right: 20rpx;
}

.result-info {
  display: flex;
  flex-direction: column;
}

.result-info .desc {
  margin-bottom: 10rpx;
}

.similarity {
  font-size: 12px;
  position: absolute;
  top: -50rpx;
  right: -10rpx;
  text-shadow: 2px 2px 0 #fc0d1b;
  transform: perspective(500px) skew(-15deg) rotateY(-15deg);
}