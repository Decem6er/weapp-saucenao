/* components/result-list/result-list.wxss */
.search-result {
  margin-top: 10rpx;
  padding: 50rpx;
}

.search-result .result-item {
  margin-bottom: 80rpx;
}

.show-more {
  color: #fff;
  font-size: 14px;
  padding: 0 10px;
  float: right;
  background: #000;
  border: 2px solid #fff;
  border-left-width: 4px;
  border-right-width: 3px;
  border-bottom-width: 3px;
  transform: skew(10deg) perspective(800px) rotateY(10deg) rotateX(5deg);
}

.hight-light {
  display: inline-block;
  font-size: 16px;
  height: 40rpx;
  line-height: 40rpx;
  background: #fff;
  color: #000;
  transform: skew(10deg);
}
