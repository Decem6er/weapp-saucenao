
.result-item {
  padding: 20rpx;
  color: #fff;
  font-size: 14px;
  border: 10rpx solid #fff;
  display: flex;
  position: relative;
}

.thumbnail {
  margin-right: 20rpx;
}

.result-info {
  display: flex;
  flex-direction: column;
}

.result-info .desc {
  margin-bottom: 10rpx;
}

.similarity {
  font-size: 12px;
  position: absolute;
  top: -50rpx;
  right: -10rpx;
}

.copy-container {
  border: 2px solid #fff;
  display: inline-block;
  padding: 0 5px;
  margin-left: 52rpx;
  transform: perspective(300px) skew(-15deg) rotateY(-5deg);
  position: relative;
}
.copy-container::before {
  content: '';
  position: absolute;
  height: 1px;
  width: 50rpx;
  background: #fff;
  left: -50rpx;
  top: 18rpx;
  font-weight: lighter;
}
.copy1 {
  color: #fff;
  -webkit-text-stroke: 1rpx #c9171e;
}

.copy2 {
  color: #000;
  -webkit-text-stroke: 1rpx #fff;
}

.has-copy {
  padding: 12rpx 0;
}