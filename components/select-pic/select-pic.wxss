/* components/select-pic/select-pic.wxss */

.select-background {
  height: 400rpx;
  background-color: #c9171e;
  text-align: center;
  background-size: cover;
  background-image: url("data:image/png;base64,");
}

.search-btn-container {
  margin-top: 50rpx;
  text-align: center;
}

.search-btn {
  display: inline-block;
  width: 400rpx;
  background: #000;
  color: #fff;
  font-size: 16px;
  height: 100rpx;
  line-height: 80rpx;
  border-radius: 0;
  border: 10rpx solid #fff;
  transform: perspective(500px) skew(-15deg) rotateY(-10deg);
  box-shadow: 0 0 0 10rpx #c9171e;
  transition: transform .6s;
}

.search-btn-hover {
  transform: rotateY(0deg);
}